<?xml version="1.0" encoding="utf-8"?>
<offset x="0" y="0">
    <default font="Courier" bgColor="[140]*3" hoverColor="[210]*3"/>
    
    <vector dir="v">
    
    <text text="Параметры монеты"/>
    
        <vector x="20" margin="10" dir="v">
            <vector margin="5" dir="v">
                <text text="Угол поворота:"/>
                <vector>
                    <SeekBar id="angle"
                        pos="[0,0,290,25]"
                        points="[i for i in range(-180, 181)]" 
                        cursor="180"/>
                    <text id="t_angle" text="0"/>
                </vector>
            </vector>

            <vector margin="5" dir="v">
                <text text="Радиус окружности:"/>
                <vector>
                    <SeekBar id="radius"
                        pos="[0,0,290,25]"
                        points="[i for i in range(30, 150+1)]" 
                        cursor="50"/>
                    <text id="t_radius" text="0"/>
                </vector>
                <button id="erase" text="Применить"/>
            </vector>

            <button id="default" text="Отменить изменения"/>
        </vector>
    </vector>

</offset>